                <item name="mage2ArgumentsReplacementCmd" xsi:type="object">Mage2\ArgumentsReplacement\Command\Index</item>
            </argument>
        </arguments>
    </type>

    <type name="Mage2\ArgumentsReplacement\Model\Device">
