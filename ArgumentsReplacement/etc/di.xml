                <item name="1" xsi:type="string">Samsung 5s</item>
                <item name="2" xsi:type="string">Iphone 8 Black</item>
            </argument>
        </arguments>
    </type>

    <preference
            for="Mage2\ArgumentsReplacement\Model\DeviceInterface"
            type="Mage2\ArgumentsReplacement\Model\Device" />

</config>